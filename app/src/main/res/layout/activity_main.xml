<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/maintv_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/maintv_title"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/mainbt_receive_start"
        android:layout_width="122dp"
        android:layout_height="78dp"
        android:layout_marginTop="20dp"
        android:text="@string/mainbt_receive_start"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/maintv_title"
        app:layout_constraintTop_toBottomOf="@+id/maintv_title" />

    <TextView
        android:id="@+id/maintv_mesg_receive_stats"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/maintv_mesg_receive_stats"
        android:textColor="#333333"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainbt_receive_start" />

</android.support.constraint.ConstraintLayout>